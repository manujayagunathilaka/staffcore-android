<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.EmployeeProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6200EE"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp">
                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvNic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIC: 98xxxxxxxV"
                android:textColor="#E0E0E0"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="Personal Info"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:contentPadding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender: Male"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DOB: 1999-01-01"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvMarital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: Single"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvJoined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joined: 2024-01-01"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Contact Info"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:contentPadding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile: 071xxxxxxx"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home: 011xxxxxxx"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address: Panadura, Sri Lanka"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Documents (ID &amp; CV)"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:contentPadding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgIdFront"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:layout_marginEnd="4dp"
                            android:background="#EEE"/>

                        <ImageView
                            android:id="@+id/imgIdBack"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:layout_marginStart="4dp"
                            android:background="#EEE"/>
                    </LinearLayout>

                    <TextView
                        android:text="CV Image"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgCv"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_marginTop="4dp"
                        android:background="#EEE"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnMarkAttendance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Mark Attendance"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnAddAdvance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add Salary Advance"
                android:backgroundTint="#009688"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#E0F2F1"
                app:contentPadding="16dp">
                <TextView
                    android:id="@+id/tvTotalAdvance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Advances: Rs. 0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00796B"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
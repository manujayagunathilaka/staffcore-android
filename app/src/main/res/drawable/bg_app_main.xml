<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#1A103C"
                android:endColor="#0F0A25"
                android:startColor="#2E1F5E" />
        </shape>
    </item>

    <item
        android:width="400dp"
        android:height="400dp"
        android:left="-100dp"
        android:top="-150dp">
        <shape android:shape="oval">
            <gradient
                android:centerColor="#206C63FF"
                android:endColor="#00000000"
                android:gradientRadius="350dp"
                android:startColor="#40BF5AF2"
                android:type="radial" />
        </shape>
    </item>

</layer-list>